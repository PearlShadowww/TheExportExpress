{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1421",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ExportExpressPro Desktop",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:1421", "http://localhost:3001", "http://localhost:5000", "http://localhost:8001"]
      },
      "fs": {
        "all": false,
        "scope": ["$DOCUMENT/*", "$DESKTOP/*"]
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.exportexpresspro.desktop",
      "targets": ["app"],
      "publisher": "ExportExpressPro",
      "category": "Business",
      "copyright": "Â© 2024 ExportExpressPro"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ExportExpressPro Desktop",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ]
  }
} 